{
	"name": "awesome-gadgets",
	"version": "2.22.0",
	"description": "Storage, management, compilation, and automatic deployment of MediaWiki gadgets.",
	"type": "module",
	"scripts": {
		"build": "pnpm format && node --no-warnings --loader ts-node/esm scripts/build.ts",
		"deploy": "pnpm format && node --no-warnings --loader ts-node/esm scripts/deploy.ts",
		"format": "prettier --cache --write . && pnpm lint:fix && tsc",
		"eslint": "eslint --cache .",
		"eslint:fix": "eslint --cache --fix .",
		"stylelint": "stylelint --allow-empty-input --cache src/**/*.{css,less} ",
		"stylelint:fix": "stylelint --allow-empty-input --cache --fix src/**/*.{css,less} ",
		"lint": "pnpm eslint && pnpm stylelint",
		"lint:fix": "pnpm eslint:fix && pnpm stylelint:fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky install"
	},
	"author": {
		"name": "AnYiEE",
		"email": "i@anyi.in"
	},
	"contributors": [
		"Other contributors <https://github.com/AnYiEE/AwesomeGadgets/graphs/contributors>"
	],
	"license": "GPL-3.0-or-later",
	"homepage": "https://github.com/AnYiEE/AwesomeGadgets",
	"repository": {
		"type": "git",
		"url": "https://github.com/AnYiEE/AwesomeGadgets.git"
	},
	"bugs": {
		"url": "https://github.com/AnYiEE/AwesomeGadgets/issues"
	},
	"keywords": [
		"Gadget",
		"MediaWiki",
		"MediaWiki Gadget"
	],
	"devDependencies": {
		"@babel/core": "^7.23.3",
		"@babel/plugin-transform-member-expression-literals": "^7.23.3",
		"@babel/plugin-transform-property-literals": "^7.23.3",
		"@babel/plugin-transform-reserved-words": "^7.23.3",
		"@babel/preset-env": "^7.23.3",
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@types/babel__core": "^7.20.5",
		"@types/jqueryui": "^1.12.21",
		"@types/node": "^20.10.0",
		"@types/oojs-ui": "^0.47.6",
		"@types/prompts": "^2.4.9",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"chalk": "^5.3.0",
		"core-js": "^3.33.3",
		"esbuild": "^0.19.7",
		"esbuild-plugin-less": "^1.3.1",
		"esbuild-postcss": "^0.0.4",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-wikimedia": "latest",
		"eslint-plugin-unicorn": "^49.0.0",
		"happy-dom": "^12.10.3",
		"husky": "^8.0.3",
		"less-plugin-npm-import": "^2.1.0",
		"less-plugin-preset-env": "latest",
		"mwn": "^2.0.1",
		"p-queue": "^7.4.1",
		"postcss-import": "^15.1.0",
		"postcss-preset-env": "^9.3.0",
		"prettier": "^3.1.0",
		"prompts": "^2.4.2",
		"stylelint": "^15.11.0",
		"stylelint-config-wikimedia": "latest",
		"ts-node": "^10.9.1",
		"types-mediawiki-renovate": "latest",
		"typescript": "^5.3.2"
	},
	"pnpm": {
		"overrides": {
			"ansi-regex": "^5.0.1",
			"browserslist-config-wikimedia": "latest",
			"emoji-regex": "latest",
			"escape-string-regexp": "^4.0.0",
			"eslint-config-wikimedia": "latest",
			"stylelint-config-wikimedia": "latest",
			"types-mediawiki": "npm:types-mediawiki-renovate"
		},
		"patchedDependencies": {
			"eslint-plugin-no-jquery@2.7.0": "patches/eslint-plugin-no-jquery@2.7.0.patch"
		}
	}
}
